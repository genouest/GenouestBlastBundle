<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <!-- Db Provider classes -->
        <parameter key="blast.db.list.biomaj.constraint.validator.class">Genouest\Bundle\BiomajBundle\Constraints\BiomajValidator</parameter>
        <parameter key="blast.db.list.list.constraint.validator.class">Symfony\Component\Validator\Constraints\ChoiceValidator</parameter>
        <parameter key="blast.db.list.custom.constraint.validator.class">Genouest\Bundle\BlastBundle\Constraints\DbCustomValidator</parameter>
        <parameter key="blast.db.list.biomaj.constraint.class">Genouest\Bundle\BiomajBundle\Constraints\Biomaj</parameter>
        <parameter key="blast.db.list.list.constraint.class">Symfony\Component\Validator\Constraints\Choice</parameter>
        <parameter key="blast.db.list.custom.constraint.class">Genouest\Bundle\BlastBundle\Constraints\DbCustom</parameter>
    </parameters>
    
    <services>
        <service id="blast.form.type" class="%blast.form.type.class%">
            <argument type="service" id="service_container" />
        </service>
        
        <service id="blast.request" class="%blast.request.class%">
            <argument type="service" id="service_container" />
        </service>
        
        <service id="twig.extension.split" class="Genouest\Bundle\BlastBundle\Extension\SplitExtension">
            <tag name="twig.extension" />
        </service>
    </services>

</container>
